<%= form_for @articulo do |f| %>
	<% if @articulo.errors.any? %>
	<div id="errors">
		<h2>Se han producido los siguientes errores: </h2>
		<ul>
			<% @articulo.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= f.label :titulo %> <br>
	<%= f.text_field :titulo %> <br>

	<%= f.label :contenido %> <br>
	<%= f.text_area :contenido %> <br>

	<%= f.submit "#{@boton} articulo" %>
<% end %>